<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yaban.Web</title>
    <partial name="_Styles" />
</head>
<body>
    <partial name="Partials/Header" />

    @if (IsSectionDefined("Hero"))
    {
        <div class="buraya-css-eklenmeli-unutma">
            @await RenderSectionAsync("Hero")
        </div>
    }
    <main role="main">
        @RenderBody()
    </main>

    <partial name="Partials/Footer" />
    <partial name="_Scripts" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
